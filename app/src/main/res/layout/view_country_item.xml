<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/margin_normal">

    <TextView
        android:id="@+id/countryNameRegionCapitalTextView"
        android:layout_width="@dimen/flexible_component"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginHorizontal="@dimen/margin_normal"
        style="@style/TextStyle"
        tools:text="United States of America, N.A.\n\nWashington, D.C." />

    <TextView
        android:id="@+id/countryCodeTextView"
        android:layout_width="@dimen/flexible_component"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        style="@style/TextStyle.Small"
        tools:text="US" />

</LinearLayout>